extends layout

block vars
  - var title = 'Login'

block content
  .background-center
    .dialog
      .dialog__logo
        img(src='/images/logo.png' alt='logo')
      .dialog__message 
        .title Authenticate with your Ethereum wallet.
      .dialog__actions
        button.button.button--eauth Login with browser
        button.button.button--fortmatic Login with fortmatic
      hr.divider(data-content='or')
      .dialog__actions
        .qrcode-wrapper
          .qrcode-wrapper__text Login with mobile wallet
          .qrcode-wrapper__qrcode
            #qrcode
        .timer
          .timer__number 00:00
          .timer__message
            img.icon(src='/images/refresh.svg' alt='refresh-icon')
            .timer__text will refresh
    .powered-by-text Powered by Pelith

block scripts
  script(src='/socket.io/socket.io.js' type='text/javascript')
  script(src='https://cdn.jsdelivr.net/npm/easytimer@1.1.1/src/easytimer.min.js' type='text/javascript')
  script(src='https://cdn.jsdelivr.net/gh/pelith/eauth.js/dist/eauth.min.js' type='text/javascript')
  script(src='/scripts/qrcode.min.js' type='text/javascript')
  script(src='/scripts/login.js' type='text/javascript')

block stylesheets
  link(rel='stylesheet' href='/stylesheets/main.css')
