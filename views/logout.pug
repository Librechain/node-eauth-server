extends layout

block vars
  - var title = 'Logout'

block content
  .background-center
    .dialog
      .dialog__logo
        img(src='/images/logo.png' alt='logo')
      .dialog__message
        .title Authorized
        .subtitle.mt-24 You are now authorized with
        #fulladdress(style='display: none;') #{address}
        .address
          span#address -
        #fulladdress.collapse #{address}
      .dialog__actions
        form(action='/api/logout' method='post')
          input#url(type='hidden' name='url' value='')
          button.button.button--logout Logout
    .powered-by-text Powered by Pelith

block scripts
  script(src='/scripts/showAddress.js' type='text/javascript')
  script.
    document.getElementById('url').value = new URLSearchParams(window.location.search).get('url')

block stylesheets
  link(rel='stylesheet' href='/stylesheets/main.css')
