extends layout

block vars
  - var title = 'Logout'

block content
  .dialog__default.dialog
    .dialog__logo
      img(src='/images/logo.png' alt='logo')
    .dialog__message
      .title Authorized
      .subtitle.mt-24 You are now authorized with ENS
      .address
        span(title=`${ens}`) #{ens}
    .dialog__message
      .subtitle Address
      #fulladdress(style='display: none;') #{address}
      .address
        span#address(data-toggle="tooltip" title=`${address}`) -
      #fulladdress.collapse #{address}
    .dialog__actions
      form(action='/api/logout' method='post')
        input#url(type='hidden' name='url' value='')
        button.button.button--logout Logout

block scripts
  script(src='/scripts/showAddress.js' type='text/javascript')
  script.
    document.getElementById('url').value = window.location.pathname + window.location.search

block stylesheets
  link(rel='stylesheet' href='/stylesheets/main.css')
