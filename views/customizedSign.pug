extends layout

block vars
  - var title = 'Contract Login'

block content
  .background-center
    .dialog
      .dialog__logo
        img(src='/images/logo.png' alt='logo')
      .dialog__message
        .subtitle.mt-24 Continue login with your contract
        #fulladdress(style='display: none;') #{address}
        .address
          span#address -
      label Message
      textarea.form-control.message(disabled="disabled") #{message}
      label Message Hex
      textarea.form-control.messageHex(disabled="disabled")
      hr.divider(data-content='fill in your signature')
      textarea.form-control.signature
      .dialog__actions
        button.button.button--verify Verify Signature
    .powered-by-text Powered by Pelith

block scripts
  script(src='/socket.io/socket.io.js' type='text/javascript')
  script(src='https://cdn.jsdelivr.net/npm/easytimer@1.1.1/src/easytimer.min.js' type='text/javascript')
  script(src='/scripts/qrcode.min.js' type='text/javascript')
  script(src='/scripts/customizedsign.js' type='text/javascript')
  script(src='/scripts/showAddress.js' type='text/javascript')

block stylesheets
  link(rel='stylesheet' href='/stylesheets/main.css')
