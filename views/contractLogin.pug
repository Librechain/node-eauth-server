extends layout

block vars
  - var title = 'Contract Login'

block content
  .background-center
    .dialog
      .dialog__logo
        img(src='/images/logo.png' alt='logo')
      .dialog__message 
        .title Authenticate with your Ethereum Contract wallet.
      .dialog__actions
        label Contract Address #[input.input--contract(value='')]
        button.button.button--eauth Login with browser
        button.button.button--fortmatic Login with fortmatic
    .powered-by-text Powered by Pelith

block scripts
  script(src='https://cdn.jsdelivr.net/gh/pelith/eauth.js@isValidSignature/dist/eauth.min.js' type='text/javascript')
  script(src='/scripts/contractlogin.js' type='text/javascript')

block stylesheets
  link(rel='stylesheet' href='/stylesheets/main.css')
